</head>

<body class="g-sidenav-show bg-gray-100">
  <div class="min-height-300 bg-primary position-absolute w-100"></div>
  {{> __dsidenav}}
  <main class="main-content position-relative border-radius-lg ">
    {{> __dashnavbar}}

    <div class="container-fluid py-4">
      <div class="row mb-4">
        <div class="col-12">
          <div class="card">
            <div class="card-header pb-0">
              <h6 class="mb-0">Property Finder Leads</h6>
              <p class="text-sm text-muted mb-0">Applications submitted from the property finder form.</p>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Contact</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Market</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Experience</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Motivation</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Submitted</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each leads}}
                    <tr>
                      <td>
                        <div class="d-flex px-3 py-1">
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">{{this.FullName}}</h6>
                            {{#if this.TelegramHandle}}
                            <p class="text-xs text-secondary mb-0">@{{this.TelegramHandle}}</p>
                            {{/if}}
                          </div>
                        </div>
                      </td>
                      <td class="align-middle text-sm">
                        <div class="d-flex flex-column">
                          <span class="text-xs">{{this.Email}}</span>
                          <span class="text-xs text-secondary">{{this.Phone}}</span>
                          {{#if (cleanIp this.ApplicantIP)}}
                          <a class="text-xs" href="https://ipinfo.io/{{cleanIp this.ApplicantIP}}" target="_blank">IP lookup</a>
                          {{/if}}
                        </div>
                      </td>
                      <td class="align-middle text-sm">
                        <span class="text-xs">{{this.MarketFocus}}</span>
                      </td>
                      <td class="align-middle text-sm">
                        <span class="text-xs">{{this.ExperienceLevel}}</span>
                        <div class="text-xs text-secondary">{{this.DealStrategy}}</div>
                      </td>
                      <td class="align-middle text-sm">
                        <span class="text-xs">{{this.Motivation}}</span>
                        <div class="text-xs text-secondary">Reward: {{this.PreferredReward}}</div>
                      </td>
                      <td class="align-middle text-sm">
                        <span class="text-xs">{{formatDate this.SubmitDate}}</span>
                        <div class="text-xs text-secondary">Join Telegram: {{#if this.JoinTelegram}}Yes{{else}}No{{/if}}</div>
                      </td>
                    </tr>
                    {{/each}}
                    {{#unless leads.length}}
                    <tr>
                      <td colspan="6" class="text-center py-4 text-sm text-muted">No property finder leads yet.</td>
                    </tr>
                    {{/unless}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header pb-0">
              <h6 class="mb-0">Signed Agreements</h6>
              <p class="text-sm text-muted mb-0">Independent contractor agreements submitted.</p>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Contact</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Address</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Agreement</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Submitted</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each contracts}}
                    <tr>
                      <td>
                        <div class="d-flex px-3 py-1">
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">{{this.FullName}}</h6>
                            <p class="text-xs text-secondary mb-0">Signed: {{this.SignatureName}}</p>
                          </div>
                        </div>
                      </td>
                      <td class="align-middle text-sm">
                        <div class="d-flex flex-column">
                          <span class="text-xs">{{this.Email}}</span>
                          <span class="text-xs text-secondary">{{this.Phone}}</span>
                          {{#if (cleanIp this.ApplicantIP)}}
                          <a class="text-xs" href="https://ipinfo.io/{{cleanIp this.ApplicantIP}}" target="_blank">IP lookup</a>
                          {{/if}}
                        </div>
                      </td>
                      <td class="align-middle text-sm">
                        <span class="text-xs">{{this.Street}}</span>
                        <div class="text-xs text-secondary">{{this.City}}, {{this.State}} {{this.Zip}}</div>
                      </td>
                      <td class="align-middle text-sm">
                        <span class="text-xs">{{formatDate this.AgreementDate}}</span>
                        <div class="text-xs text-secondary">Accepted: {{#if this.AcceptedTerms}}Yes{{else}}No{{/if}}</div>
                      </td>
                      <td class="align-middle text-sm">
                        <span class="text-xs">{{formatDate this.SubmitDate}}</span>
                      </td>
                    </tr>
                    {{/each}}
                    {{#unless contracts.length}}
                    <tr>
                      <td colspan="5" class="text-center py-4 text-sm text-muted">No signed agreements yet.</td>
                    </tr>
                    {{/unless}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
