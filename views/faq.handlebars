        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
        <script>
          (function () {
            const accordion = document.getElementById('faqAccordion');
            const search = document.getElementById('faqSearch');
            const clearBtn = document.getElementById('faqClear');
            const chips = Array.from(document.querySelectorAll('.faq-chip'));
            const emptyState = document.getElementById('faqEmpty');
            if (!accordion) return;

            const items = Array.from(accordion.querySelectorAll('.faq-item'));

            function setOpen(item, open) {
              const btn = item.querySelector('.faq-question');
              const ans = item.querySelector('.faq-answer');
              if (!btn || !ans) return;
              btn.setAttribute('aria-expanded', open ? 'true' : 'false');
              ans.style.display = open ? 'block' : 'none';
              item.classList.toggle('is-open', !!open);
            }

            function closeAll() {
              items.forEach(it => setOpen(it, false));
            }

            function getActiveFilter() {
              const active = chips.find(c => c.classList.contains('active'));
              return active ? active.dataset.filter : 'all';
            }

            function normalize(str) {
              return String(str || '').toLowerCase().trim();
            }

            function matches(item, q, filter) {
              const text = normalize(item.textContent);
              const tags = normalize(item.getAttribute('data-tags'));
              const okFilter = (filter === 'all') ? true : tags.includes(filter);
              const okQ = !q ? true : text.includes(q);
              return okFilter && okQ;
            }

            function applyFilters() {
              const q = normalize(search && search.value);
              const filter = getActiveFilter();
              let visible = 0;

              items.forEach(item => {
                const show = matches(item, q, filter);
                item.style.display = show ? '' : 'none';
                if (show) visible++;
              });

              if (emptyState) emptyState.classList.toggle('d-none', visible !== 0);

              items.forEach(item => {
                if (item.style.display === 'none') setOpen(item, false);
              });
            }

            accordion.addEventListener('click', (e) => {
              const btn = e.target.closest('.faq-question');
              if (!btn) return;
              const item = btn.closest('.faq-item');
              if (!item) return;
              const isOpen = btn.getAttribute('aria-expanded') === 'true';
              closeAll();
              setOpen(item, !isOpen);
            });

            chips.forEach(chip => {
              chip.addEventListener('click', () => {
                chips.forEach(c => c.classList.remove('active'));
                chip.classList.add('active');
                applyFilters();
              });
            });

            if (search) search.addEventListener('input', applyFilters);
            if (clearBtn) {
              clearBtn.addEventListener('click', () => {
                if (search) search.value = '';
                chips.forEach(c => c.classList.remove('active'));
                const allChip = chips.find(c => c.dataset.filter === 'all');
                allChip && allChip.classList.add('active');
                applyFilters();
                search && search.focus();
              });
            }

            applyFilters();
          })();
        </script>

        <style>
          .faq-section {
