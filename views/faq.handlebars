            text-align: left;
            padding: 14px 16px;
            font-weight: 700;
            font-size: 1rem;
            background: transparent;
            border: 0;
            color: rgba(0, 0, 0, 0.86);
          }

          .faq-question:focus-visible {
            outline: 3px solid rgba(13, 110, 253, 0.35);
            outline-offset: 2px;
            border-radius: 12px;
          }

          .faq-icon {
            width: 32px;
            height: 32px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            background: rgba(13, 110, 253, 0.08);
            color: #0d6efd;
