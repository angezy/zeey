<script>
  (function () {
    const form = document.getElementById('rpo-fastSell3');
    if (!form) return;
    const status = document.getElementById('rpo-fastSell3-status');

    form.addEventListener('submit', async function (e) {
      e.preventDefault();
      if (status) {
        status.className = 'alert d-none';
        status.innerText = '';
      }
      const fd = new FormData(form);
      try {
        const res = await fetch(form.action, {
          method: 'POST',
          body: fd
        });
        const data = await res.json();
        const ok = res.ok && data && data.success;
        if (status) {
          status.className = 'alert ' + (ok ? 'alert-success' : 'alert-danger');
          status.innerText = ok ? (data.message || 'Submitted! We will contact you soon.') : (data.message || 'Please check your details and try again.');
          status.classList.remove('d-none');
        }
        if (ok) form.reset();
      } catch (err) {
        if (status) {
          status.className = 'alert alert-danger';
          status.innerText = 'Network error. Please try again.';
          status.classList.remove('d-none');
        }
        console.error('fastSell3 submit error', err);
      }
    });
  })();
</script>

