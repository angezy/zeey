<form id="cash-buyer-form" action="/api/cbForm" method="POST" enctype="multipart/form-data" novalidate aria-label="Cash Buyer Registration Form">
  <div class="cb-progress mb-4">
    <div class="progress" style="height: 8px;">
      <div id="form-progress" class="progress-bar bg-primary" role="progressbar" style="width: 0%" aria-valuemin="0"
        aria-valuemax="100" aria-valuenow="0"></div>
    </div>
    <div id="cb-steps" class="cb-steps mt-3" aria-hidden="true">
      <div class="cb-step active" data-step="1">Basics</div>
      <div class="cb-step" data-step="2">Activity</div>
      <div class="cb-step" data-step="3">Financing</div>
      <div class="cb-step" data-step="4">Deal</div>
      <div class="cb-step" data-step="5">Property</div>
      <div class="cb-step" data-step="6">Finish</div>
    </div>
  </div>

  <!-- Step 1: Basic Information -->
  <section id="section-1" class="form-section" aria-labelledby="section-1-title" data-step="1">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h4 id="section-1-title" class="mb-0 text-white">Basic Information</h4>
      <small class="text-white-50">Step 1 of 6</small>
    </div>

    <div class="row g-3">
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="FullName" type="text" id="FullName" class="text-dark form-control" required />
          <label class="form-label" for="FullName">Full name *</label>
          <div class="invalid-feedback">Full name is required.</div>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="CompanyName" type="text" id="CompanyName" class="text-dark form-control" />
          <label class="form-label" for="CompanyName">Company name (optional)</label>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="Website" type="url" id="Website" class="text-dark form-control" placeholder="https://example.com" />
          <label class="form-label" for="Website">Website (optional)</label>
          <div class="form-text text-white-50">If you include a website, use the full URL (starts with https://).</div>
          <div class="invalid-feedback">Please enter a valid website URL.</div>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="CellPhone" type="tel" id="CellPhone" class="text-dark form-control" required autocomplete="tel" />
          <label class="form-label" for="CellPhone">Cell phone *</label>
          <div class="invalid-feedback">A valid phone number is required.</div>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="Email" type="email" id="Email" class="text-dark form-control" required autocomplete="email" />
          <label class="form-label" for="Email">Email *</label>
          <div class="invalid-feedback">A valid email is required.</div>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="Address" type="text" id="Address" class="text-dark form-control" required autocomplete="address-level2" />
          <label class="form-label" for="Address">City / State *</label>
          <div class="invalid-feedback">City and state are required.</div>
        </div>
      </div>
    </div>

    <div class="cb-actions mt-4">
      <button type="button" class="btn btn-primary" onclick="navigateSection(1, 2)">Next</button>
    </div>
  </section>

  <!-- Step 2: Experience & Activity -->
  <section id="section-2" class="form-section hidden-section" aria-labelledby="section-2-title" data-step="2" aria-hidden="true">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h4 id="section-2-title" class="mb-0 text-white">Experience & Activity</h4>
      <small class="text-white-50">Step 2 of 6</small>
    </div>

    <div class="row g-3">
      <div class="col-md-4">
        <div data-mdb-input-init class="form-outline">
          <input name="YearsInBusiness" type="number" id="YearsInBusiness" class="text-dark form-control" required min="0" inputmode="numeric" />
          <label class="form-label" for="YearsInBusiness">Years in business *</label>
          <div class="invalid-feedback">Required (0 or more).</div>
        </div>
      </div>
      <div class="col-md-4">
        <div data-mdb-input-init class="form-outline">
          <input name="CompletedProjects" type="number" id="CompletedProjects" class="text-dark form-control" required min="0" inputmode="numeric" />
          <label class="form-label" for="CompletedProjects">Completed projects *</label>
          <div class="invalid-feedback">Required (0 or more).</div>
        </div>
      </div>
      <div class="col-md-4">
        <div data-mdb-input-init class="form-outline">
          <input name="CurrentProjects" type="text" id="CurrentProjects" class="text-dark form-control" required />
          <label class="form-label" for="CurrentProjects">Current projects *</label>
          <div class="invalid-feedback">This field is required.</div>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="PropertiesNext6Months" type="number" id="PropertiesNext6Months" class="text-dark form-control" required min="0" inputmode="numeric" />
          <label class="form-label" for="PropertiesNext6Months">Properties to buy in the next 6 months *</label>
          <div class="invalid-feedback">Required (0 or more).</div>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="PropertiesPerYear" type="number" id="PropertiesPerYear" class="text-dark form-control" required min="0" inputmode="numeric" />
          <label class="form-label" for="PropertiesPerYear">Properties per year *</label>
          <div class="invalid-feedback">Required (0 or more).</div>
        </div>
      </div>
    </div>

    <div class="cb-actions mt-4">
      <button type="button" class="btn btn-outline-light" onclick="navigateSection(2, 1)">Back</button>
      <button type="button" class="btn btn-primary" onclick="navigateSection(2, 3)">Next</button>
    </div>
  </section>

  <!-- Step 3: Financing -->
  <section id="section-3" class="form-section hidden-section" aria-labelledby="section-3-title" data-step="3" aria-hidden="true">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h4 id="section-3-title" class="mb-0 text-white">Financing</h4>
      <small class="text-white-50">Step 3 of 6</small>
    </div>

    <div class="mb-4">
      <div class="cb-field-title">Source(s) of financing *</div>
      <div class="text-white-50 small mb-2">Select all that apply.</div>
      <div class="d-flex gap-3 flex-wrap cb-checks" data-required-group-container="SourceFinancing">
        <div class="form-check">
          <input name="SourceFinancing" class="form-check-input" type="checkbox" value="Cash on Hand" id="SourceFinancingCash" data-required-group="SourceFinancing" />
          <label class="form-check-label" for="SourceFinancingCash">Cash on hand</label>
        </div>
        <div class="form-check">
          <input name="SourceFinancing" class="form-check-input" type="checkbox" value="Hard Money" id="SourceFinancingHard" data-required-group="SourceFinancing" />
          <label class="form-check-label" for="SourceFinancingHard">Hard money</label>
        </div>
        <div class="form-check">
          <input name="SourceFinancing" class="form-check-input" type="checkbox" value="Private Money" id="SourceFinancingPrivate" data-required-group="SourceFinancing" />
          <label class="form-check-label" for="SourceFinancingPrivate">Private money</label>
        </div>
        <div class="form-check">
          <input name="SourceFinancing" class="form-check-input" type="checkbox" value="Traditional" id="SourceFinancingTraditional" data-required-group="SourceFinancing" />
          <label class="form-check-label" for="SourceFinancingTraditional">Traditional (bank)</label>
        </div>
        <div class="form-check">
          <input name="SourceFinancing" class="form-check-input" type="checkbox" value="JV Partner" id="SourceFinancingJv" data-required-group="SourceFinancing" />
          <label class="form-check-label" for="SourceFinancingJv">JV partner(s)</label>
        </div>
        <div class="form-check">
          <input name="SourceFinancing" class="form-check-input" type="checkbox" value="Seller Financing" id="SourceFinancingSeller" data-required-group="SourceFinancing" />
          <label class="form-check-label" for="SourceFinancingSeller">Seller financing</label>
        </div>
        <div class="form-check">
          <input name="SourceFinancing" class="form-check-input" type="checkbox" value="Subject To" id="SourceFinancingSubjectTo" data-required-group="SourceFinancing" />
          <label class="form-check-label" for="SourceFinancingSubjectTo">Subject to</label>
        </div>
        <div class="form-check">
          <input name="SourceFinancing" class="form-check-input" type="checkbox" value="Other" id="SourceFinancingOther" data-required-group="SourceFinancing" />
          <label class="form-check-label" for="SourceFinancingOther">Other</label>
        </div>
      </div>
      <div class="invalid-feedback cb-group-feedback" data-required-group-feedback="SourceFinancing">Please select at least one financing source.</div>

      <div id="otherInputContainer" class="mt-3" style="display:none;">
        <div data-mdb-input-init class="form-outline">
          <input name="OtherFinancingDetails" type="text" id="OtherFinancingDetails" class="text-dark form-control" placeholder="Describe your financing source" />
          <label class="form-label" for="OtherFinancingDetails">Other financing details (optional)</label>
        </div>
      </div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div class="cb-field-title">Funding in place? *</div>
        <div class="d-flex gap-4 flex-wrap">
          <div class="form-check">
            <input name="FundingInPlace" class="form-check-input" type="radio" value="Yes" id="FundingInPlaceYes" required />
            <label class="form-check-label" for="FundingInPlaceYes">Yes</label>
          </div>
          <div class="form-check">
            <input name="FundingInPlace" class="form-check-input" type="radio" value="No" id="FundingInPlaceNo" />
            <label class="form-check-label" for="FundingInPlaceNo">No</label>
          </div>
        </div>
        <div class="invalid-feedback">Required.</div>
      </div>
      <div class="col-md-6">
        <div class="cb-field-title">Proof of funds available? *</div>
        <div class="d-flex gap-4 flex-wrap">
          <div class="form-check">
            <input name="ProofOfFunds" class="form-check-input" type="radio" value="Yes" id="ProofOfFundsYes" required />
            <label class="form-check-label" for="ProofOfFundsYes">Yes</label>
          </div>
          <div class="form-check">
            <input name="ProofOfFunds" class="form-check-input" type="radio" value="No" id="ProofOfFundsNo" />
            <label class="form-check-label" for="ProofOfFundsNo">No</label>
          </div>
        </div>
        <div class="invalid-feedback">Required.</div>
      </div>
    </div>

    <div id="proofUploadContainer" class="mb-4" style="display:none;">
      <label for="proofUpload" class="form-label text-white">Upload proof of funds (optional)</label>
      <input name="ProofOfFundsFile" type="file" id="proofUpload" class="form-control" />
      <div class="form-text text-white-50">Supported: images or PDF.</div>
    </div>

    <div class="mb-4">
      <div class="cb-field-title">If we bring 3 great deals next month, can you purchase them all? *</div>
      <div class="d-flex gap-4 flex-wrap">
        <div class="form-check">
          <input name="TripleDeals" class="form-check-input" type="radio" value="Yes" id="TripleDealsYes" required />
          <label class="form-check-label" for="TripleDealsYes">Yes</label>
        </div>
        <div class="form-check">
          <input name="TripleDeals" class="form-check-input" type="radio" value="No" id="TripleDealsNo" />
          <label class="form-check-label" for="TripleDealsNo">No</label>
        </div>
        <div class="form-check">
          <input name="TripleDeals" class="form-check-input" type="radio" value="Maybe" id="TripleDealsMaybe" />
          <label class="form-check-label" for="TripleDealsMaybe">Maybe</label>
        </div>
      </div>
      <div class="invalid-feedback">Required.</div>
    </div>

    <div class="mb-4">
      <div class="cb-field-title">How quickly can you close on a great deal? *</div>
      <div class="d-flex gap-3 flex-wrap">
        <div class="form-check"><input name="Quickly" class="form-check-input" type="radio" value="One Day" id="QuicklyOneDay" required /><label class="form-check-label" for="QuicklyOneDay">One day</label></div>
        <div class="form-check"><input name="Quickly" class="form-check-input" type="radio" value="Within a Week" id="QuicklyWeek" /><label class="form-check-label" for="QuicklyWeek">Within a week</label></div>
        <div class="form-check"><input name="Quickly" class="form-check-input" type="radio" value="Within Two Weeks" id="QuicklyTwoWeeks" /><label class="form-check-label" for="QuicklyTwoWeeks">Within two weeks</label></div>
        <div class="form-check"><input name="Quickly" class="form-check-input" type="radio" value="Within a Month" id="QuicklyMonth" /><label class="form-check-label" for="QuicklyMonth">Within a month</label></div>
        <div class="form-check"><input name="Quickly" class="form-check-input" type="radio" value="Over a Month" id="QuicklyOverMonth" /><label class="form-check-label" for="QuicklyOverMonth">Over a month</label></div>
        <div class="form-check"><input name="Quickly" class="form-check-input" type="radio" value="Other Timeline" id="QuicklyOther" /><label class="form-check-label" for="QuicklyOther">Other timeline</label></div>
      </div>
      <div class="invalid-feedback">Required.</div>

      <div id="otherQuicklyInputContainer" class="mt-3" style="display:none;">
        <div data-mdb-input-init class="form-outline">
          <input name="QuicklyOtherTimeline" type="text" id="QuicklyOtherTimeline" class="text-dark form-control" placeholder="e.g., 45 days due to lender" />
          <label class="form-label" for="QuicklyOtherTimeline">Other timeline details (optional)</label>
        </div>
      </div>
    </div>

    <div class="cb-actions mt-4">
      <button type="button" class="btn btn-outline-light" onclick="navigateSection(3, 2)">Back</button>
      <button type="button" class="btn btn-primary" onclick="navigateSection(3, 4)">Next</button>
    </div>
  </section>

  <!-- Step 4: Deal Criteria -->
  <section id="section-4" class="form-section hidden-section" aria-labelledby="section-4-title" data-step="4" aria-hidden="true">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h4 id="section-4-title" class="mb-0 text-white">Deal Criteria</h4>
      <small class="text-white-50">Step 4 of 6</small>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-12">
        <div class="cb-field-title">Price range *</div>
        <div class="text-white-50 small mb-2">Enter your typical buy box. We’ll use this to filter deals.</div>
      </div>
      <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input name="PriceRangesMin" type="number" id="PriceRangesMin" class="form-control" placeholder="Min" min="0" required inputmode="numeric" />
        </div>
      </div>
      <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input name="PriceRangesMax" type="number" id="PriceRangesMax" class="form-control" placeholder="Max" min="0" required inputmode="numeric" />
        </div>
      </div>
      <div class="col-12">
        <div class="dual-range" aria-hidden="true">
          <input id="priceMinSlider" type="range" min="0" max="2000000" step="5000" value="100000" />
          <input id="priceMaxSlider" type="range" min="0" max="2000000" step="5000" value="750000" />
          <div class="dual-range-track"></div>
          <div class="dual-range-range" id="priceRangeFill"></div>
        </div>
        <div class="text-white-50 small mt-2">Tip: you can also drag the sliders.</div>
      </div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="MinimumProfit" type="text" id="MinimumProfit" class="text-dark form-control" required placeholder="e.g., $25k or 15% ROI" />
          <label class="form-label" for="MinimumProfit">Minimum profit requirement *</label>
          <div class="invalid-feedback">Required.</div>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="GoodDealCriteria" type="text" id="GoodDealCriteria" class="text-dark form-control" required placeholder="e.g., 70% rule, 2% rule, etc." />
          <label class="form-label" for="GoodDealCriteria">What makes a “good deal” to you? *</label>
          <div class="invalid-feedback">Required.</div>
        </div>
      </div>
    </div>

    <div class="cb-actions mt-4">
      <button type="button" class="btn btn-outline-light" onclick="navigateSection(4, 3)">Back</button>
      <button type="button" class="btn btn-primary" onclick="navigateSection(4, 5)">Next</button>
    </div>
  </section>

  <!-- Step 5: Property Preferences -->
  <section id="section-5" class="form-section hidden-section" aria-labelledby="section-5-title" data-step="5" aria-hidden="true">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h4 id="section-5-title" class="mb-0 text-white">Property Preferences</h4>
      <small class="text-white-50">Step 5 of 6</small>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <textarea name="PreferredAreas" id="PreferredAreas" class="text-dark form-control" rows="3" required placeholder="Cities, zip codes, neighborhoods"></textarea>
          <label class="form-label" for="PreferredAreas">Preferred areas *</label>
          <div class="invalid-feedback">Required.</div>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <textarea name="AvoidedAreas" id="AvoidedAreas" class="text-dark form-control" rows="3" required placeholder="Areas to avoid, HOA, flood zones, etc."></textarea>
          <label class="form-label" for="AvoidedAreas">Areas to avoid *</label>
          <div class="invalid-feedback">Required.</div>
        </div>
      </div>
    </div>

    <div class="mb-4">
      <div class="cb-field-title">Property type(s) *</div>
      <div class="d-flex gap-3 flex-wrap cb-checks" data-required-group-container="PropertyType">
        <div class="form-check"><input name="PropertyType" class="form-check-input" type="checkbox" value="Single Family" id="PropertyTypeSfh" data-required-group="PropertyType" /><label class="form-check-label" for="PropertyTypeSfh">Single family</label></div>
        <div class="form-check"><input name="PropertyType" class="form-check-input" type="checkbox" value="Multi Family" id="PropertyTypeMulti" data-required-group="PropertyType" /><label class="form-check-label" for="PropertyTypeMulti">Multi family</label></div>
        <div class="form-check"><input name="PropertyType" class="form-check-input" type="checkbox" value="Condo" id="PropertyTypeCondo" data-required-group="PropertyType" /><label class="form-check-label" for="PropertyTypeCondo">Condo</label></div>
        <div class="form-check"><input name="PropertyType" class="form-check-input" type="checkbox" value="Townhome" id="PropertyTypeTownhome" data-required-group="PropertyType" /><label class="form-check-label" for="PropertyTypeTownhome">Townhome</label></div>
        <div class="form-check"><input name="PropertyType" class="form-check-input" type="checkbox" value="Mobile Home" id="PropertyTypeMobile" data-required-group="PropertyType" /><label class="form-check-label" for="PropertyTypeMobile">Mobile home</label></div>
        <div class="form-check"><input name="PropertyType" class="form-check-input" type="checkbox" value="Land" id="PropertyTypeLand" data-required-group="PropertyType" /><label class="form-check-label" for="PropertyTypeLand">Land</label></div>
        <div class="form-check"><input name="PropertyType" class="form-check-input" type="checkbox" value="Commercial" id="PropertyTypeCommercial" data-required-group="PropertyType" /><label class="form-check-label" for="PropertyTypeCommercial">Commercial</label></div>
        <div class="form-check"><input name="PropertyType" class="form-check-input" type="checkbox" value="Other" id="PropertyTypeOther" data-required-group="PropertyType" /><label class="form-check-label" for="PropertyTypeOther">Other</label></div>
      </div>
      <div class="invalid-feedback cb-group-feedback" data-required-group-feedback="PropertyType">Please select at least one property type.</div>
      <div id="propertyOtherInputContainer" class="mt-3" style="display:none;">
        <div data-mdb-input-init class="form-outline">
          <input name="PropertyTypeOtherDetails" type="text" id="PropertyTypeOtherDetails" class="text-dark form-control" />
          <label class="form-label" for="PropertyTypeOtherDetails">Other property type (optional)</label>
        </div>
      </div>
    </div>

    <div class="mb-4">
      <div class="cb-field-title">Work type / Condition *</div>
      <div class="d-flex gap-3 flex-wrap cb-checks" data-required-group-container="WorkType">
        <div class="form-check"><input name="WorkType" class="form-check-input" type="checkbox" value="Cosmetic Jobs" id="WorkTypeCosmetic" data-required-group="WorkType" /><label class="form-check-label" for="WorkTypeCosmetic">Cosmetic jobs</label></div>
        <div class="form-check"><input name="WorkType" class="form-check-input" type="checkbox" value="Tear Down" id="WorkTypeTearDown" data-required-group="WorkType" /><label class="form-check-label" for="WorkTypeTearDown">Tear down</label></div>
        <div class="form-check"><input name="WorkType" class="form-check-input" type="checkbox" value="Medium Rehab" id="WorkTypeMedium" data-required-group="WorkType" /><label class="form-check-label" for="WorkTypeMedium">Medium rehab</label></div>
        <div class="form-check"><input name="WorkType" class="form-check-input" type="checkbox" value="Full Renovations" id="WorkTypeFullReno" data-required-group="WorkType" /><label class="form-check-label" for="WorkTypeFullReno">Full renovations</label></div>
        <div class="form-check"><input name="WorkType" class="form-check-input" type="checkbox" value="Add Square Footage" id="WorkTypeAddSqft" data-required-group="WorkType" /><label class="form-check-label" for="WorkTypeAddSqft">Add square footage</label></div>
        <div class="form-check"><input name="WorkType" class="form-check-input" type="checkbox" value="New Development" id="WorkTypeNewDev" data-required-group="WorkType" /><label class="form-check-label" for="WorkTypeNewDev">New development</label></div>
        <div class="form-check"><input name="WorkType" class="form-check-input" type="checkbox" value="Other" id="WorkTypeOther" data-required-group="WorkType" /><label class="form-check-label" for="WorkTypeOther">Other</label></div>
      </div>
      <div class="invalid-feedback cb-group-feedback" data-required-group-feedback="WorkType">Please select at least one option.</div>
      <div id="workTypeOtherInputContainer" class="mt-3" style="display:none;">
        <div data-mdb-input-init class="form-outline">
          <input name="WorkTypeOtherDetails" type="text" id="WorkTypeOtherDetails" class="text-dark form-control" placeholder="Please specify" />
          <label class="form-label" for="WorkTypeOtherDetails">Other (please specify)</label>
        </div>
      </div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="MaxPropertyAge" type="number" id="MaxPropertyAge" class="text-dark form-control" required min="0" inputmode="numeric" />
          <label class="form-label" for="MaxPropertyAge">Maximum property age (years) *</label>
          <div class="invalid-feedback">Required (0 or more).</div>
        </div>
      </div>
      <div class="col-md-6">
        <div data-mdb-input-init class="form-outline">
          <input name="Mins" type="text" id="Mins" class="text-dark form-control" placeholder="e.g., 3/2, 1200+ sqft" />
          <label class="form-label" for="Mins">Minimum beds/baths or sqft (optional)</label>
        </div>
      </div>
      <div class="col-12">
        <div data-mdb-input-init class="form-outline">
