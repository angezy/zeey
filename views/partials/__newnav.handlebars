<script>
    // small helper: mark current nav link active based on pathname
    (function () {
        try {
            const links = document.querySelectorAll('#ftco-navbar .nav-link');
            const normalize = (p) => {
                const s = (p || '').replace(/\/+$|^\s+|\s+$/g, '').toLowerCase();
                return s === '' ? '/' : s;
            };
            const path = normalize(window.location.pathname);
            links.forEach(a => {
                try {
                    const href = normalize(new URL(a.href, window.location.origin).pathname);
                    if (href === path || (href !== '/' && path.startsWith(href))) {
                        a.classList.add('active');
                    } else {
                        a.classList.remove('active');
                    }
                } catch (e) { /* ignore malformed hrefs */ }
            });
        } catch (e) { /* ignore DOM errors */ }
    })();
</script>
<script>
    // toggler fallback: if Bootstrap's collapse isn't available, toggle 'show' class on the navbar collapse
